citHeader("To cite package 'BB' in publications use:")

citEntry(entry="article",
  author  = personList(as.person("R. Varadhan"),
                       as.person("P. D. Gilbert")),
  year    = 2009,
  title   = "BB: An R package for Solving a Large System of Nonlinear Equations",
  journal = "J. Statistical Software",

  textVersion = 
     paste("R. Varadhan and P. D. Gilbert (2009) ", 
           "BB: An R package for Solving a Large System of Nonlinear Equations ",
           "J. Statistical Software ",
         "<http://www.jhsph.edu/agingandhealth/People/Faculty_personal_pages/Varadhan.html>",
               sep="")
  )
