citHeader("To cite package 'BB' in publications use:")

citEntry(entry="article",
  author  = personList(as.person("R. Varadhan"),
                       as.person("P. D. Gilbert")),
  year    = 2009,
  title   = "BB: An R Package for Solving a Large System of 
  Nonlinear Equations and for Optimizing a High-Dimensional Nonlinear 
  Objective Function",
  journal = "J. Statistical Software",
  volume  = 32,

  textVersion = 
     paste("R. Varadhan and P. D. Gilbert (2009) ", 
           "BB: An R Package for Solving a Large System of 
  Nonlinear Equations and for Optimizing a High-Dimensional Nonlinear 
  Objective Function",
           "J. Statistical Software, 32, ",
         "<http://www.jhsph.edu/agingandhealth/People/Faculty_personal_pages/Varadhan.html>.",
               sep="")
  )
